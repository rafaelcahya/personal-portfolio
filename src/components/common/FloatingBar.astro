---
const navs = [
    {
        name: "Home",
        link: "/",
    },
    {
        name: "About",
        link: "/about",
    },
    {
        name: "Project",
        link: "/project",
    },
    // {
    //     name: "Insights",
    //     link: "/insight",
    // },
];

if (!Array.isArray(navs) || navs.length === 0) {
    return Astro.redirect("/404", 302);
}
---

<div
    class="fixed left-1/2 -translate-x-1/2 top-5 flex gap-4 bg-[#f0f0f0]/60 backdrop-blur-[25px] border-[1.5px] shadow-[0_4px_30px_rgba(0,0,0,0.1)] border-white/50 text-black text-sm px-6 rounded-2xl z-20 w-max"
>
    {
        navs.map((nav) => (
            <a
                href={nav.link}
                class="hover:text-orange-500 py-1.5 px-3 my-1.5 duration-100"
            >
                {nav.name}
            </a>
        ))
    }
</div>
