---
import { getEntries } from "../lib/contentful";
import Layout from "../layouts/Layout.astro";
import FloatingBar from "../components/common/FloatingBar.astro";
import Footer from "../components/common/Footer.astro";
import Bio from "../components/local/about/Bio.astro";
import Timeline from "../components/local/about/Timeline.astro";
import Skill from "../components/local/about/Skill.astro";

const profile = await getEntries("profile");
---

<Layout>
    <FloatingBar />
    <div class="bg-gradient-to-br from-white to-violet-50">
        <div
            class="flex flex-col gap-20 mx-auto py-32 sm:py-44 px-3 sm:px-10 lg:px-20 w-full max-w-5xl"
        >
            <Bio articles={profile} />
            <Timeline articles={profile} />
            <Skill articles={profile} />
        </div>
        <Footer />
    </div>
</Layout>
