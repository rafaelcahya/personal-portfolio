---
import Layout from "../layouts/Layout.astro";

import { getEntries } from "../lib/contentful";

import FloatingBar from "../components/common/FloatingBar.astro";
import Contact from "../components/sections/home/Contact.astro";
import Profile from "../components/sections/home/Profile.astro";

const profile = await getEntries("profile");
---

<Layout>
    <FloatingBar />
    <div
        class="grid place-items-center align-middle h-screen max-w-[90rem] mx-auto"
    >
        <div
            class="flex flex-col gap-10 pb-56 px-5 sm:px-10 lg:px-20 xl:px-44 tracking-[0.015rem]"
        >
            <Profile articles={profile} />
            <Contact articles={profile} />
        </div>
    </div>
</Layout>
