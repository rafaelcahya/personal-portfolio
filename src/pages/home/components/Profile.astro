---
const { articles } = Astro.props;

if (!Array.isArray(articles) || articles.length === 0)
    throw Astro.redirect("/404", 302);
---

<div>
    {
        articles.map((article: any) => (
            <div class="flex flex-col gap-2 z-10">
                <p
                    data-aos="fade-right"
                    data-aos-duration="400"
                    class="text-zinc-500 text-[1rem] sm:text-[1.2rem]"
                >
                    Hi, I'm {article.fields.name}.
                </p>
                <p
                    data-aos="fade-right"
                    data-aos-duration="400"
                    data-aos-delay="100"
                    class="text-zinc-900 text-[1.5rem] sm:text-[2.5rem] leading-8 sm:leading-[3.5rem]"
                >
                    An Indonesia-based Quality Assurance with a passion for
                    crafting UI/UX and front-end experiences.
                </p>
            </div>
        ))
    }
</div>
