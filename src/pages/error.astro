---
import Layout from "../layouts/Layout.astro";
import PaperPlaneRight from "../assets/PaperPlaneRight";

const { title, description, showBackbutton } = Astro.props;
---

<Layout>
    <section
        class="flex flex-col items-center gap-10 text-center py-56 px-10 tracking-wider"
    >
        <div class="flex flex-col items-center gap-5">
            <p class="text-[31px] md:text-[39px] text-zinc-900 font-medium">
                {title}
            </p>
            <p class="text-[15px] leading-7 text-zinc-900 w-full sm:w-3/4">
                {description}
            </p>
        </div>

        {
            showBackbutton && (
                <div
                    onclick="window.history.back()"
                    class="group relative flex items-center justify-center bg-black text-white text-[14px] w-[150px] py-3 rounded-xl cursor-pointer overflow-hidden"
                >
                    <div class="absolute top-1/2 -translate-y-1/2 left-[-1.5rem] group-hover:left-[7.5rem] opacity-0 group-hover:opacity-100 transition-all duration-300 ease-out">
                        <PaperPlaneRight />
                    </div>
                    <span class="transition-all duration-300 ease-out group-hover:opacity-0">
                        Go back
                    </span>
                </div>
            )
        }
    </section>
</Layout>
